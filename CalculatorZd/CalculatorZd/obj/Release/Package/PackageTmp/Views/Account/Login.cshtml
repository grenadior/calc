@model CalculatorZd.Models.LoginViewModel

@{
    ViewBag.Title = "Вход";
}

<hgroup class="title">
    <h3>@ViewBag.Title</h3>
</hgroup>
<div class="row-fluid">
    <div class="span6">
        <section id="loginForm">
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset class="form-horizontal">
                    <legend> </legend>
                    <div class="control-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="controls">
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <label class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </label>
                        </div>
                        <div class="controls">
                            <a href="/ForgotPassword">Забыли пароль?</a>
                        </div>
                    </div>
                    <div class="form-actions no-color">
                        <input type="submit" value="Вход" class="btn" />
                    </div>
                </fieldset>
            }
        </section>
    </div>
  
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}