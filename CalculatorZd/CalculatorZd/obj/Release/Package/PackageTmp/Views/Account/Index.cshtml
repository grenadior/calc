<p>
    @Html.ActionLink("Сменить пароль", "Manage", "Account")
</p>

<p>
    @if (SessionManager.FirmInfo != null)
    {
        if (SessionManager.FirmInfo.IsNonActivated)
        {
            @Html.ActionLink("Отправить ссылку для активации e-mail", "Index", "SendActivationEmailLink");

        }
        else
        {
            @Html.ActionLink("Сменить e-mail администратора", "Index", "SendActivationEmailLink");
        }
    }
</p>

