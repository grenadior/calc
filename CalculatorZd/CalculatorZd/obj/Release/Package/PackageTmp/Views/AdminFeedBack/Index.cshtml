@using BO.Implementation
@{
    ViewBag.Title = "Админка";
    Layout = "~/Views/Shared/_NgLayout.cshtml";
}
@model CalculatorZd.Controllers.AdminFeedBackViewModel


    <table class="table table-striped table-bordered table-condensed table-hover" style="width:50%">
        <thead>
            <tr>
                <th data-field="id" class="col-md-2">ID</th>
                <th data-field="name" class="col-md-6">
                    <i class="glyphicon glyphicon-star"></i>
                    Название фирмы
                </th>
                <th data-field="name" class="col-md-6">
                    <i class="glyphicon glyphicon-star"></i>
                    Дата добавления
                </th>
                <th data-field="name" class="col-md-6">
                    <i class="glyphicon glyphicon-star"></i>
                    Текст ошибки
                </th>
                <th data-field="name" class="col-md-6">
                    <i class="glyphicon glyphicon-star"></i>
                    Сообщение от админа
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Messages)
            {
                <tr data-index="@item.ID">
                    <td>@item.ID</td>
                    <td>@item.FirmName</td>
                    <td style="">@item.AddDate</td>
                    <td style="">@item.Text</td>
                    <td style="">@item.IsAdmin</td>
                </tr>
            }
        </tbody>
    </table>

