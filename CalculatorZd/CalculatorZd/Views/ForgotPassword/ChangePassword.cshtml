@model CalculatorZd.Models.ChangeUserPasswordViewModel
@{
    ViewBag.Title = ">Смена пароля";
    Layout = "~/Views/Shared/_NgLayout.cshtml";
}

<h2>Смена пароля</h2>
@using (Html.BeginForm("ChangePassword", "ForgotPassword"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset class="form-horizontal">
        <legend>Смена пароля</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.NewPassword)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Сменить пароля" class="btn" />
        </div>
    </fieldset>
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.ActivationCode)
}

